<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:background="@drawable/white_grey_bottom"
        android:layout_height="50dp">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/HomeToolbar"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="11dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imgcheck11"
                    android:src="@drawable/ic_check_grey"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/imageBackSearch"
                    android:layout_toLeftOf="@id/imgcheck11"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/search_hint"
                    android:inputType="text"
                    android:id="@+id/hintBuscarClaseSearch"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="11dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageBackSearch"
                    android:src="@drawable/ic_back"
                    />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>

</merge>